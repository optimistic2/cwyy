<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lxm.ss.main.MainActivity">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:text="欢迎来到宠物世界"/>

   <Button
       android:id="@+id/btn_ceshi1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/txt_title"
       android:text="接口1"/>

    <Button
        android:id="@+id/btn_ceshi2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_ceshi1"
        android:text="接口2"/>

    <Button
        android:id="@+id/btn_ceshi3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_ceshi2"
        android:text="接口3"/>

    <Button
        android:id="@+id/btn_ceshi4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_ceshi3"
        android:text="接口4"/>

    <Button
        android:id="@+id/btn_ceshi5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_ceshi4"
        android:text="接口5"/>

    <TextView
        android:id="@+id/txt_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_ceshi4"
        android:text="hi"/>


</RelativeLayout>
